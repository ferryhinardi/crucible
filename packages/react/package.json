{
  "name": "crucible-react",
  "version": "0.1.1",
  "description": "React hooks and components for Crucible feature flags",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ferryhinardi/crucible.git",
    "directory": "packages/react"
  },
  "keywords": [
    "react",
    "hooks",
    "feature-flags",
    "ab-testing",
    "nextjs",
    "ssr",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.tsx --format esm --dts",
    "dev": "tsup src/index.tsx --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "crucible-core": "*"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.45",
    "jsdom": "^23.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "tsup": "^8.0.1",
    "vitest": "^1.1.0"
  }
}
