{
  "name": "crucible-react",
  "version": "0.2.0",
  "description": "React hooks and components for Crucible feature flags",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ferryhinardi/crucible.git",
    "directory": "packages/react"
  },
  "keywords": [
    "react",
    "hooks",
    "feature-flags",
    "ab-testing",
    "nextjs",
    "ssr",
    "typescript"
  ],
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "default": "./dist/server.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.tsx src/server.ts --format esm --dts --minify --sourcemap",
    "dev": "tsup src/index.tsx src/server.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "crucible-core": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.14",
    "jsdom": "^28.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.3.3",
    "tsup": "^8.0.1",
    "vitest": "^4.0.18"
  }
}
