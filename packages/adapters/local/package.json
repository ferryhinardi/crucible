{
  "name": "crucible-adapter-local",
  "version": "0.2.0",
  "description": "Local JSON adapter for Crucible feature flags (development use)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ferryhinardi/crucible.git",
    "directory": "packages/adapters/local"
  },
  "keywords": [
    "crucible",
    "adapter",
    "local",
    "development",
    "feature-flags"
  ],
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --minify --sourcemap",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "crucible-core": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "tsup": "^8.0.1"
  }
}
