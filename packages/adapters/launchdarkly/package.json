{
  "name": "crucible-adapter-launchdarkly",
  "version": "0.2.0",
  "description": "LaunchDarkly adapter for Crucible feature flags",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ferryhinardi/crucible.git",
    "directory": "packages/adapters/launchdarkly"
  },
  "keywords": [
    "crucible",
    "adapter",
    "launchdarkly",
    "feature-flags"
  ],
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --minify --sourcemap",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "crucible-core": "workspace:*",
    "launchdarkly-node-server-sdk": "^7.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "tsup": "^8.0.1"
  }
}
