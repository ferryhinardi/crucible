{
  "name": "crucible-core",
  "version": "0.2.0",
  "description": "Type-safe, provider-agnostic feature flags and A/B testing core library",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ferryhinardi/crucible.git",
    "directory": "packages/core"
  },
  "keywords": [
    "feature-flags",
    "feature-toggles",
    "ab-testing",
    "experiments",
    "typescript",
    "type-safe",
    "rollouts"
  ],
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --minify --sourcemap",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {},
  "devDependencies": {
    "typescript": "^5.3.3",
    "tsup": "^8.0.1"
  }
}
